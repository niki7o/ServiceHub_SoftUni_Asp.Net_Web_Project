@model IEnumerable<ServiceHub.Core.Models.Service.ServiceViewModel>
@{
    ViewData["Title"] = "All Services";
}

<h2 class="text-center">All Services</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (User.IsInRole("BusinessUser") || User.IsInRole("Admin"))
{
    <p>
        <a asp-action="CreateTemplate" class="btn btn-primary">Създай услуга шаблон</a>
    </p>
}

<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="All" method="get">
            <div class="form-group">
                <label for="categoryFilter">Категория:</label>
                <select name="categoryFilter" id="categoryFilter" class="form-control" asp-items="ViewBag.Categories" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                </select>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="All" method="get">
            <div class="form-group">
                <label for="accessTypeFilter">Тип достъп:</label>
                <select name="accessTypeFilter" id="accessTypeFilter" class="form-control" asp-items="ViewBag.AccessTypes" onchange="this.form.submit()">
                    <option value="">All Access Types</option>
                </select>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="All" method="get">
            <div class="form-group">
                <label for="sort">Сортирай по:</label>
                <select name="sort" id="sort" class="form-control" onchange="this.form.submit()">
                    <option value="">Default</option>
                    <option value="az" selected="@(ViewBag.CurrentSort == "az")">Име (А-Я)</option>
                    <option value="za" selected="@(ViewBag.CurrentSort == "za")">Име (Я-А)</option>
                    <option value="recent" selected="@(ViewBag.CurrentSort == "recent")">Най-нови</option>
                    <option value="mostviewed" selected="@(ViewBag.CurrentSort == "mostviewed")">Най-гледани</option>
                </select>
            </div>
        </form>
    </div>
</div>

<div class="row">
    @foreach (var service in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@service.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@service.CategoryName</h6>
                    <p class="card-text flex-grow-1">
                        @(service.Description.Length > 100 ? service.Description.Substring(0, 100) + "..." : service.Description)
                    </p>

                    @if (service.IsTemplate && !service.IsApproved)
                    {
                        <div class="alert alert-info py-1 px-2 text-sm" role="alert">
                            Създадена услуга от @service.CreatedByUserName, но е още в разработка.
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-sm btn-outline-secondary">Детайли</a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-action="ToggleFavorite" asp-route-serviceId="@service.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm @(service.IsFavorite ? "btn-warning" : "btn-outline-warning")">
                                        <i class="fas fa-star"></i> Любими
                                    </button>
                                </form>
                            }
                        </div>
                        <small class="text-muted">
                            <i class="fas fa-eye"></i> @service.ViewsCount
                            <i class="fas fa-star" style="color: gold;"></i> @service.AverageRating.ToString("F1") (@service.ReviewCount)
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
