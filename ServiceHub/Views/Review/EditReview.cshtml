@model ServiceHub.Core.Models.Reviews.ReviewFormModel

@{
    ViewData["Title"] = "Редактирай ревю";
    Guid reviewId = ViewBag.ReviewId;
    Guid serviceId = ViewBag.ServiceId;
    string serviceTitle = ViewBag.ServiceTitle;
    Layout = "_Layout"; 
}

<style>
  

   

    h1 {
        font-size: 2.2rem;
        font-weight: 700;
        color: #1d3557;
        margin-bottom: 30px;
        text-align: center;
    }

    .form-group label {
        font-weight: 600;
        color: #1d3557;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px 15px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        font-size: 1rem;
        box-shadow: inset 0 1px 2px rgba(0,0,0,0.05);
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

        .form-control:focus {
            border-color: #457b9d;
            box-shadow: 0 0 0 0.2rem rgba(69, 123, 157, 0.25);
            outline: none;
        }

    .rating-stars-form {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end; 
        gap: 5px;
        margin-top: 10px;
    }

        .rating-stars-form input[type="radio"] {
            display: none;
        }

        .rating-stars-form label {
            font-size: 1.8rem;
            color: #ccc;
            cursor: pointer;
            transition: color 0.2s ease;
        }

            .rating-stars-form label:hover,
            .rating-stars-form label:hover ~ label,
            .rating-stars-form input[type="radio"]:checked ~ label {
                color: gold;
            }

    .btn-primary {
        background-color: #2a9d8f;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 12px rgba(42, 157, 143, 0.3);
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #218276;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(42, 157, 143, 0.4);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
        cursor: pointer;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(108, 117, 125, 0.4);
        }

    .alert {
        border-radius: 10px;
        padding: 16px 22px;
        font-size: 1rem;
        margin-bottom: 25px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        font-weight: 500;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }
</style>

<div class="container">
    <h1>Редактирай ревю за @serviceTitle</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-controller="Review" asp-action="EditReview" asp-route-reviewId="@reviewId" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label asp-for="Rating" class="form-label">Оценка (1-5):</label>
                    <div class="rating-stars-form">
                        @for (int i = 5; i >= 1; i--)
                        {
                            
                            <input asp-for="Rating" type="radio" id="ratingStar@(i)" value="@i" required />
                            <label for="ratingStar@(i)"><i class="fas fa-star"></i></label>
                        }
                    </div>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Comment" class="form-label">Коментар:</label>
                    <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Напишете вашия коментар тук..."></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">Запази промените</button>
                    
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
