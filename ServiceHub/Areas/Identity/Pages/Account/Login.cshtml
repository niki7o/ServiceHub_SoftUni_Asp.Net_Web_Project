@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<style>
    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(135deg, #a8dadc 0%, #457b9d 100%);
        color: #333;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        overflow-x: hidden;
    }

    .login-page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 150px);
        padding: 30px;
        box-sizing: border-box;
    }

    .login-card {
        max-width: 500px;
        width: 100%;
        background-color: #ffffff;
        padding: 45px;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(220, 220, 220, 0.6);
        position: relative;
        z-index: 10;
        overflow: hidden;
        transform: translateY(0);
        transition: transform 0.5s ease-out, box-shadow 0.5s ease-out;
    }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
        }

    .form-title {
        font-size: 2.5rem;
        font-weight: 900;
        color: #1d3557; 
        margin-bottom: 30px;
        text-align: center;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.1);
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-control {
        border-radius: 12px;
        padding: 15px 20px;
        border: 1px solid #dcdcdc;
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.05);
        transition: border-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        font-size: 1.1rem;
        color: #555;
    }

        .form-control:focus {
            border-color: #457b9d; 
            box-shadow: 0 0 0 4px rgba(69, 123, 157, 0.2);
            outline: none;
            background-color: #f9f9f9;
        }

    .btn-primary {
        background: linear-gradient(90deg, #457b9d, #1d3557); 
        border: none;
        color: white;
        font-size: 1.3rem;
        font-weight: 700;
        padding: 15px 25px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(29, 53, 87, 0.4);
        transition: all 0.3s ease-in-out;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #1d3557, #457b9d); 
            transform: translateY(-3px) scale(1.01);
            box-shadow: 0 12px 25px rgba(29, 53, 87, 0.5);
        }

        .btn-primary:active {
            transform: translateY(0);
            box-shadow: 0 4px 10px rgba(29, 53, 87, 0.3);
        }

    .btn-secondary-custom {
        background-color: #a8dadc; 
        border: 1px solid #457b9d; 
        color: #1d3557; 
        font-size: 1.1rem;
        font-weight: 600;
        padding: 12px 20px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
        text-transform: uppercase;
        margin-top: 15px; 
    }

        .btn-secondary-custom:hover {
            background-color: #457b9d; 
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

    .text-danger {
        font-size: 0.9rem;
    }

    .form-links a {
        color: #457b9d;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease-in-out;
    }

        .form-links a:hover {
            color: #1d3557; 
            text-decoration: underline;
        }

    @@media (max-width: 768px) {
        .login-card {
            padding: 30px;
            border-radius: 15px;
        }

        .form-title {
            font-size: 2rem;
            margin-bottom: 25px;
        }

        .form-control {
            padding: 12px 18px;
            font-size: 1rem;
        }

        .btn-primary, .btn-secondary-custom {
            font-size: 1.1rem;
            padding: 12px 20px;
        }
    }
</style>

<div class="login-page-container">
    <div class="login-card">
        <h2 class="form-title">Вход в профил</h2>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="Потребителско име" />
                    <label asp-for="Input.Username" class="form-label">Потребителско име</label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Парола" />
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Вход</button>
                </div>
                <div class="form-links mt-3 text-center">
                   
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация на нов потребител</a>
                    </p>
                   
                   
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
