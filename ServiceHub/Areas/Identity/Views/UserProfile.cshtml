@model ServiceHub.Core.Models.User.UserProfileViewModel
@using Microsoft.AspNetCore.Identity
@using ServiceHub.Data.Models
@using ServiceHub.Common.Enum
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = $"Профил на {Model.UserName}";
    string currentUserId = UserManager.GetUserId(User);
    bool isCurrentUser = (Model.Id == currentUserId);
    bool isAdmin = await UserManager.IsInRoleAsync(await UserManager.FindByIdAsync(currentUserId), "Admin");
}

<style>

    body {
        background-color: #f0f2f5;
    }

    .profile-container {
        max-width: 960px;
        margin: 40px auto;
        padding: 20px;
        font-family: 'Inter', sans-serif;
    }

    .profile-card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        border: none;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

    .profile-card-body {
        padding: 40px;
    }


    .profile-title {
        font-size: 2.8rem;
        font-weight: 900;
        color: #2c3e50;
        margin-bottom: 30px;
        text-align: center;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.1);
    }

    .profile-title-current-user {
        color: #3498db;
        font-size: 1.8rem;
        display: block;
        margin-top: 5px;
    }

    .section-heading {
        font-size: 1.5rem;
        font-weight: 700;
        color: #34495e;
        margin-bottom: 15px;
        border-bottom: 2px solid #ecf0f1;
        padding-bottom: 8px;
    }


    .grid-layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 30px;
        margin-bottom: 40px;
    }

    @@media (min-width: 768px) {
        .grid-layout {
            grid-template-columns: repeat(2, 1fr);
        }
    }


    .info-box {
        background-color: #fdfefe;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease-in-out;
    }

        .info-box:hover {
            transform: translateY(-3px);
        }

    .info-text {
        color: #555;
        margin-bottom: 8px;
        font-size: 1.05rem;
        display: flex;
        align-items: center;
    }

        .info-text i {
            margin-right: 10px;
            color: #3498db;
        }

    .info-label {
        font-weight: 600;
        color: #333;
    }


    .list-style-disc {
        list-style-type: none;
        padding-left: 0;
    }

    .list-item-spacing > li {
        margin-bottom: 10px;
        position: relative;
        padding-left: 25px;
    }

        .list-item-spacing > li::before {
            content: "\f00c";
            font-family: "Font Awesome 5 Free";
            font-weight: 900;
            color: #27ae60;
            position: absolute;
            left: 0;
            top: 0;
        }

    .link-style {
        color: #2980b9;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease-in-out;
    }

        .link-style:hover {
            color: #3498db;
            text-decoration: underline;
        }


    .review-item {
        border-bottom: 1px dashed #e0e0e0;
        padding-bottom: 15px;
        margin-bottom: 15px;
    }

        .review-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

    .review-comment {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.4;
    }

    .review-date {
        color: #888;
        font-size: 0.8rem;
        margin-top: 5px;
    }


    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        gap: 10px;
    }

    .pagination-button {
        background-color: #1d3557;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
    }

        .pagination-button:hover:not(:disabled) {
            background-color: #6a5acd;
            transform: translateY(-2px);
        }

        .pagination-button:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

    .pagination-info {
        font-size: 1rem;
        color: #555;
        font-weight: 500;
    }


    @@media (max-width: 600px) {
        .profile-card-body {
            padding: 20px;
        }

        .profile-title {
            font-size: 2rem;
        }

        .profile-title-current-user {
            font-size: 1.4rem;
        }

        .section-heading {
            font-size: 1.3rem;
        }

        .info-box {
            padding: 15px;
        }
    }
</style>

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-card-body">
            <h1 class="profile-title">
                Профил на @Model.UserName
                @if (isCurrentUser)
                {
                    <span class="profile-title-current-user">(Вашият профил)</span>
                }
            </h1>

            <div class="grid-layout">
                <div class="info-box">
                    <h2 class="section-heading"><i class="fas fa-info-circle"></i> Основна информация</h2>
                    <p class="info-text"><span class="info-label"><i class="fas fa-envelope"></i> Имейл:</span> @Model.Email</p>
                    <p class="info-text"><span class="info-label"><i class="fas fa-user-tag"></i> Роли:</span> @string.Join(", ", Model.Roles)</p>
                    <p class="info-text"><span class="info-label"><i class="fas fa-briefcase"></i> Бизнес потребител:</span> @(Model.IsBusiness ? "Да" : "Не")</p>
                    @if (Model.IsBusiness && Model.BusinessExpiresOn.HasValue)
                    {
                        <p class="info-text"><span class="info-label"><i class="fas fa-calendar-alt"></i> Абонамент изтича:</span> @Model.BusinessExpiresOn.Value.ToString("dd.MM.yyyy HH:mm")</p>
                    }
                    @if (Model.LastServiceCreationDate.HasValue)
                    {
                        <p class="info-text"><span class="info-label"><i class="fas fa-plus-circle"></i> Последно създаване на услуга:</span> @Model.LastServiceCreationDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                    }
                    <p class="info-text"><span class="info-label"><i class="fas fa-check-circle"></i> Одобрени услуги:</span> @Model.ApprovedServicesCount</p>
                </div>


                <div class="info-box">
                    <h2 class="section-heading"><i class="fas fa-tools"></i> Създадени услуги (@Model.TotalCreatedServicesCount)</h2>
                    @if (Model.CreatedServices != null && Model.CreatedServices.Any())
                    {
                        <ul class="list-style-disc list-inside list-item-spacing">
                            @foreach (var service in Model.CreatedServices)
                            {
                                <li>
                                    <a asp-controller="Service" asp-action="Details" asp-route-id="@service.Id" asp-area="" class="link-style">
                                        @service.Title
                                    </a>
                                    (@service.CategoryName) - Рейтинг: @service.AverageRating.ToString("F1") (@service.ReviewCount ревюта)
                                </li>
                            }
                        </ul>


                        <div class="pagination-container">
                            <a href="@Url.Action("UserProfile", "User", new { area = "Identity", id = Model.Id, createdServicesPage = Model.CreatedServicesCurrentPage - 1, reviewsPage = Model.ReviewsCurrentPage })"
                               class="pagination-button @(Model.CreatedServicesCurrentPage <= 1 ? "disabled" : "")">
                                Предишна
                            </a>
                            <span class="pagination-info">Страница @Model.CreatedServicesCurrentPage от @Model.CreatedServicesTotalPages</span>
                            <a href="@Url.Action("UserProfile", "User", new { area = "Identity", id = Model.Id, createdServicesPage = Model.CreatedServicesCurrentPage + 1, reviewsPage = Model.ReviewsCurrentPage })"
                               class="pagination-button @(Model.CreatedServicesCurrentPage >= Model.CreatedServicesTotalPages ? "disabled" : "")">
                                Следваща
                            </a>
                        </div>
                    }
                    else
                    {
                        <p>Няма създадени услуги.</p>
                    }
                </div>
            </div>


            @if (Model.FavoriteServices != null && Model.FavoriteServices.Any())
            {
                <div class="info-box" style="margin-bottom: 40px;">
                    <h2 class="section-heading"><i class="fas fa-star"></i> Любими услуги (@Model.FavoriteServices.Count())</h2>
                    <ul class="list-style-disc list-inside list-item-spacing">
                        @foreach (var service in Model.FavoriteServices)
                        {
                            <li>
                                <a asp-controller="Service" asp-action="Details" asp-route-id="@service.Id" asp-area="" class="link-style">
                                    @service.Title
                                </a>
                                (@service.CategoryName)
                            </li>
                        }
                    </ul>
                </div>
            }
            else
            {
                <div class="info-box" style="margin-bottom: 40px;">
                    <h2 class="section-heading"><i class="fas fa-star"></i> Любими услуги</h2>
                    <p>Нямате любими услуги.</p>
                </div>
            }

            <div class="info-box">
                <h2 class="section-heading"><i class="fas fa-comments"></i> Моите ревюта (@Model.TotalReviewsCount)</h2>
                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    <div class="space-y-4">
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="review-item">
                                <p class="text-gray-800 font-medium">
                                    <a asp-controller="Service" asp-action="Details" asp-route-id="@review.ServiceId" asp-area="" class="link-style">
                                        @review.ServiceName
                                    </a>
                                    - Рейтинг: @review.Rating / 5
                                </p>
                                <p class="review-comment">Коментар: @review.Comment</p>
                                <p class="review-date">Дата: @review.CreatedOn.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        }
                    </div>

                    <div class="pagination-container">
                        <a href="@Url.Action("UserProfile", "User", new { area = "Identity", id = Model.Id, createdServicesPage = Model.CreatedServicesCurrentPage, reviewsPage = Model.ReviewsCurrentPage - 1 })"
                           class="pagination-button @(Model.ReviewsCurrentPage <= 1 ? "disabled" : "")">
                            Предишна
                        </a>
                        <span class="pagination-info">Страница @Model.ReviewsCurrentPage от @Model.ReviewsTotalPages</span>
                        <a href="@Url.Action("UserProfile", "User", new { area = "Identity", id = Model.Id, createdServicesPage = Model.CreatedServicesCurrentPage, reviewsPage = Model.ReviewsCurrentPage + 1 })"
                           class="pagination-button @(Model.ReviewsCurrentPage >= Model.ReviewsTotalPages ? "disabled" : "")">
                            Следваща
                        </a>
                    </div>
                }
                else
                {
                    <p>Няма оставени ревюта.</p>
                }
            </div>
        </div>
    </div>
</div>
